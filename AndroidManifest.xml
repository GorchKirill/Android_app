    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:ignore="AllowBackup" >
        <activity
            android:name=".Activity_Easy_amount"
            android:label="Простые вклады" />
        <activity
            android:name=".Easy_Amount_or_hard_amount"
            android:label="Сложные или простые вклады"/>

        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Kredit"
            android:label="Расчет по кредитам" />
        <activity
            android:name=".Activity_amount"
            android:label="Расчет по Вкладам" />
    </application>

</manifest>